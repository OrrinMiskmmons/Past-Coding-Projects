    <title>Professional Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .calculator {
            width: 300px;
            background: #222;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .display {
            width: 100%;
            height: 60px;
            background: #333;
            color: white;
            font-size: 2rem;
            text-align: right;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            border: none;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }

        button {
            width: 100%;
            height: 60px;
            font-size: 1.5rem;
            font-weight: bold;
            background: #444;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

        button:active {
            background: #666;
        }

        .operator {
            background: #ff9500;
        }

        .operator:active {
            background: #e08900;
        }

        .equal {
            background: #28a745;
        }

        .equal:active {
            background: #218838;
        }

        .clear {
            background: #dc3545;
        }

        .clear:active {
            background: #c82333;
        }
    </style>
